\item \((F8,A7)_{16} = ( )_{2}\)

\item \((65)_{8} = ( )_{16}\)

\item \((240,51)_{8} = ( )_{10}\)

\item \((25)_{10} = ( )_{8}\)

\item \((100101011)_{2} = ( )_{10}\)

\item \((28)_{10} = ( )_{2}\)

\item \((E3)_{16} = ( )_{2}\)

\item \((B3)_{16} = ( )_{8}\)

\item \((11001011101)_{2} = ( )_{16}\)

\item \((754)_{8} = ( )_{10}\)

\item \((106)_{8} = ( )_{16}\)

\item \((27,52)_{10} = ( )_{2}\)

